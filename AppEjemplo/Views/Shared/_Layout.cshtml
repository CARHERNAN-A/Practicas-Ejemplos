<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppEjemplo</title>
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Last-Modified" content="0">
    <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="~/js/qrcode.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.7.1/css/buttons.bootstrap5.min.css">

</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">Practicas de ejemplo</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-value="bootstrap" asp-area="" asp-controller="PracticasEjemplos" asp-action="Bootstrap">bootstrap</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-value="chart" asp-area="" asp-controller="PracticasEjemplos" asp-action="Charts">chart.js</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-value="datatable" asp-area="" asp-controller="PracticasEjemplos" asp-action="DataTable">datatable</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-value="qrcode" asp-area="" asp-controller="PracticasEjemplos" asp-action="Qrcode">qrcode</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-value="sweetalert" asp-area="" asp-controller="PracticasEjemplos" asp-action="Sweetalert">sweetalert</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-value="importcsv" asp-area="" asp-controller="PracticasEjemplos" asp-action="Importcsv">importcsv</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-value="Crud" asp-area="" asp-controller="Vehiculo" asp-action="Index">CRUD</a>
                <!-- Menu desplegable -->
                @*<div class="dropdown">
            <a class="list-group-item list-group-item-action list-group-item-light p-3 btn btn-secondary dropdown-toggle" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" data-value="importcsv">CRUD</a>
            <div class="collapse" id="collapseExample">
                <a class="dropdown-item" href="#">Crear</a>
                <a class="dropdown-item" href="#">Leer</a>
                <a class="dropdown-item" href="#">Actualizar</a>
                <a class="dropdown-item" href="#">Borrar</a>
            </div>
        </div>*@
            </div>
        </div>
        <!-- Page content wrapper-->

        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
            <!-- Page content-->
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - AppEjemplo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scripts.js"></script>
    @*Podemos renderizar scripts de otras vistas en esta seccion*@
    @RenderSection("Scripts", required: false)
</body>
</html>
